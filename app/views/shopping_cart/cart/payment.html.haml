= render "steps"

= simple_form_for @cart.credit_card, url: wizard_path, method: :put do |f|
  .row
    .col-md-8
      %h4=t "cart.payment.payment"
      = f.error_notification
      = render "credit_card_form", f: f
    .col-md-4
      = render "summary", cart: @cart

  %button.btn.btn-primary.pull-right{:type=>"submit"}
    =t"cart.payment.save_and_continue"
    %i.fa.fa-arrow-right